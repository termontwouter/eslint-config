{
  "compilerOptions": {
    "module": "Node16",
    "lib": [
      "es2022"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}
