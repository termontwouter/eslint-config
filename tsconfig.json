{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ES2022"
    ],
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "lib"
  ]
}
